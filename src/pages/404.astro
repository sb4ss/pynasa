---
import Layout from '../layouts/Layout.astro';
---

<Layout>
    
<section class="fade-in">
    <img src="eart.svg" alt="">
    <h1>404 :(</h1>
    <h2>Oh no! it seems that the resource you are looking for is not available at this time.</h2>
    <a href="/" class="bounce">Let's travel back a few light years</a>
</section>
</Layout>
<style>
img{
    filter: drop-shadow(0px 0px 50px #01b7ff88);
    opacity: 0.2;
    bottom: -200px;
    left: -300px;
    position: absolute;
    width: 500px;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

@keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
        transform: translateY(0);
    }
    40% {
        transform: translateY(-2px);
    }
    60% {
        transform: translateY(-5px);
    }
}

section {
    overflow: hidden;
    flex-direction: column;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    font-weight: 500;
    color: white;
    font-family: "Syncopate", serif;
    background: linear-gradient(to bottom, #000222, #000000);
    animation: fadeIn 2s ease-in-out;
}

a {
    padding: 20px 30px;
    border-radius: 30px;
    background-color: none;
    color: #FF9D00;
    font-family: "Syncopate", serif;
    margin-top: 20px;
    font-size: 15px;
    text-decoration: none;
    transition: 0.3s;
}

a:hover {
    background-color: #ff9d002d;
}

a.bounce {
    animation: bounce 2s infinite;
}

h1 {
    font-weight: 200;
    font-size: 80px;
}

h2 {
    text-align: center;
    width: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    color: white;
    font-family: "Syncopate", serif;
}
</style>